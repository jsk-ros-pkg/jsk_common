<launch>
  <arg name="use_android" default="true" />

  <!-- chat + text2voice -->
  <include file="$(find docomo_perception)/launch/conversation.launch">
    <arg name="use_android" value="$(arg use_android)" />
    <arg name="launch_stt" value="true" unless="$(arg use_android)" />
  </include>

  <!-- knowledge -->
  <node name="knowledge_q_and_a"
        pkg="docomo_perception" type="knowledge.py" />

  <!-- sentense understanding -->
  <node name="sentense_understanding"
        pkg="docomo_perception" type="sentense_understanding.py" />

  <!-- voice -> command -->
  <node name="voice_receiver"
        pkg="docomo_perception" type="voice_receiver.py">
    <remap from="/Tablet/voice" to="voice"
           if="$(arg use_android)"/>
  </node>

</launch>
