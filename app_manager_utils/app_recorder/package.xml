<?xml version="1.0"?>
<package format="3">
  <name>app_recorder</name>
  <version>2.2.12</version>
  <description>The app_recorder package</description>
  <maintainer email="shingogo.5511@gmail.com">Shingo Kitagawa</maintainer>
  <author email="shingogo.5511@gmail.com">Shingo Kitagawa</author>
  <license>BSD</license>

  <buildtool_depend>catkin</buildtool_depend>
  <buildtool_depend condition="$ROS_PYTHON_VERSION == 2">python-setuptools</buildtool_depend>
  <buildtool_depend condition="$ROS_PYTHON_VERSION == 3">python3-setuptools</buildtool_depend>
  <exec_depend>app_manager</exec_depend>
  <exec_depend>audio_play</exec_depend>
  <exec_depend>audio_video_recorder</exec_depend>
  <exec_depend>image_transport</exec_depend>
  <exec_depend>image_view</exec_depend>
  <exec_depend>jsk_rosbag_tools</exec_depend>

  <export>
    <app_manager plugin="${prefix}/app_recorder_plugin.yaml" />
  </export>
</package>
